[user]
	name = Iivari Äikäs
	email = iivari.aikas@gmail.com
[init]
        defaultBranch = main
[commit]
        verbose = true
[diff]
	algorithm = histogram
[rebase]
	autoSquash = true
	autoStash = true
[pull]
        rebase = true
[alias]
        d = diff
        dc = diff --cached
        st = status
        ch = checkout
        chb = checkout -b
        ci = commit
        fap = fetch --all --prune
        ba = branch --all
[include]
        path = ~/.gitconfig.override
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
